            margin: auto;
            padding-top: 10px;
            color: red;
            list-style-type: none;
        }

        #search {
            padding: 0px 10px 0px 10px;
            font-size: 16px;
            height: 35px;
            border-radius: 3px;
            font-weight: 500;
        }

        .nav-item:hover {
            background-color: lightpink;
            border-radius: 25px
        }

        .dropdown-item:hover {
            background-color: pink;
        }

        .btn1:hover {
            -ms-transform: scale(1.5);
            -webkit-transform: scale(1.5);
            transform: scale(1.5);
        }

        #card:hover {
            -ms-transform: scale(1.5);
            -webkit-transform: scale(1.5);
            transform: scale(1.1);
        }

        .table tr th {
            background-color: lightgray;
            border: none;
        }

        .image {
            display: block;
            width: 100%;
            height: auto;
        }

        .overlay {
            position: absolute;
            top: 0;
            bottom: 0;
            left: 0;
            right: 0;
            height: 100%;
            width: 100%;
            opacity: 0;
            transition: .5s ease;
            background-color: white;
        }

            .overlay:hover {
                opacity: 1;
            }

        .text {
            color: white;
            font-size: 20px;
            position: absolute;
            top: 50%;
            left: 50%;
            -webkit-transform: translate(-50%, -50%);
            -ms-transform: translate(-50%, -50%);
            transform: translate(-50%, -50%);
            text-align: center;
        }
    </style>
    <script>
        function back() {

@model List<Nhom04_Jewelry.Models.Product>

@{
    ViewBag.Title = "Products";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}
<style>
    .page-link {
        color: black;
        font-weight: bold;
        border: none;
        font-size: 20px;
    }
</style>
@{
    string iconClassA = "asc";
    string iconClassD = "desc";
    ViewBag.Names = "Sắp xếp";
}
<div class=" text-center" style="background-color: white">
    <div class="container mt-3">
        <div class="dropdown ">
            <button class="btn btn-success dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                @if (ViewBag.Name == null)
                { @ViewBag.Names }
            else
            {
            @ViewBag.Names
            }
            </button>
            <ul class="dropdown-menu">
                <li><a class="dropdown-item" href="/products/index?SortColumn=PriceG&IconClass=@iconClassD">Giá giảm dần </a></li>
                <li><a class="dropdown-item" href="/products/index?SortColumn=PriceT&IconClass=@iconClassA">Giá tăng dần</a></li>
                <li><a class="dropdown-item" href="/products/index?SortColumn=NameT&IconClass=@iconClassA">Tên tăng dần</a></li>
                <li><a class="dropdown-item" href="/products/index?SortColumn=NameG&IconClass=@iconClassD">Tên giảm dần</a></li>
            </ul>
        </div>
    </div>
    <div class="d-flex flex-wrap justify-content-center container">
        @foreach (var item in Model)
        {
            <div class="card m-3 col-3" style="width: 15rem; height: 25rem; box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);">
                <img src="~/Img/@item.Images" class="image card-img-top">
                <div class="overlay">
                    <img src="~/Img/@item.Imagess" class="image card-img-top">
                    <div class="card-body my-0">
                        <h5 class="card-title">@item.ProductName</h5>
                        <h6 class="card-text mb-2 text-body-secondary fw-bold">$ @item.Price</h6>
                        <a href="#" class="btn mx-2 btn1" style="border:none"><i class="fa fa-shopping-cart" aria-hidden="true"></i></a>
                        <a href="/products/detail/@item.ProductID" style="border:none;" class="btn btn1 mx-2 "><i class="fa fa-search-plus" aria-hidden="true"></i></a>
                    </div>
                </div>
                <div class="card-body my-0">
                    <h5 class="card-title">@item.ProductName</h5>
                    <h6 class="card-text mb-2 text-body-secondary fw-bold">$ @item.Price</h6>
                    <a href="#" class="btn mx-2 btn1" style="border:none"><i class="fa fa-shopping-cart" aria-hidden="true"></i></a>
                    <a href="/products/detail/@item.ProductID" style="border:none;" class="btn btn1 mx-2 "><i class="fa fa-search-plus" aria-hidden="true"></i></a>
                </div>
            </div>
        }
    </div>
    @{
        int PrevPage = ViewBag.Page - 1;
        if (PrevPage <= 0)
        {
            PrevPage = 1;
        }
        int NextPage = ViewBag.Page + 1;
        if (NextPage > ViewBag.Page + 1)
        {
            NextPage = ViewBag.NoOfPages;
        }


    }
    <ul class="pagination justify-content-center mb-0">
        <li class="page-item">
            <a class="page-link" href="/products/products?page=@PrevPage" aria-label="Previous">
                <span aria-hidden="true">&laquo;</span>
            </a>
        </li>
        @for (int i = 0; i < ViewBag.NoOfPages; i++)
        {
            if (i + 1 == ViewBag.Page)
            {
                <li class="page-item active"><a class="page-link rounded-pill" href="/products/products?page=@(i + 1)">@(i + 1)</a></li>
            }
            else
            {
                <li class="page-item"><a class="page-link" href="/products/products?page=@(i+1)">@(i+1)</a></li>
            }

        }
        <li class="page-item">
            <a class="page-link" href="/products/products?page=@NextPage" aria-label="Next">
                <span aria-hidden="true">&raquo;</span>
            </a>
        </li>
    </ul>
</div>



@model Nhom04_Jewelry.Models.Product

@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_LayoutPage2.cshtml";
}



<div id="carousel" class=" mx-auto" style="width:65%">
    <div>
        <div>
            <img src="~/Img/@ViewBag.Banner" class="d-block mx-auto" style="width: 100%">
        </div>
    </div>
</div>
<h2 class="text-center mt-2 mb-0 fw-bold">Thông tin sản phẩm</h2>
<<div class="container mb-3">
    <div class="row">
        <div class="col d-flex justify-content-center">
            <img style="width:53%" src="~/Img/@Model.Images" />
        </div>
        <div class="col">
            <table class="table">
                <tr>
                    <th>@Model.ProductName</th>
                </tr>
                <tr>
                    <th>Giá: @Model.Price</th>
                </tr>
                <tr>
                    <th>Loại: @Model.Category.CategoryName</th>
                </tr>
                <tr>
                    <th>@Model.Descriptions</th>
                </tr>
            </table>
            <div class="input-group mb-4">
                <label class="input-group-text rounded-start-pill" for="inputGroupFile02">Số lượng</label><br />
                <input type="number" class="form-control rounded-end-pill" style="width:20px" id="soluong">
            </div>
            <a class="btn btn-info" href="/products/chonmua/@Model.ProductID">Mua</a>
            <a class=" btn btn-warning" href="/products/chonmua/@Model.ProductID">Thêm vào giỏ hàng</a>
            <input class="btn text-white bg-dark" type="button" value="Back" onclick="back()">
        </div>
    </div>
</div>

